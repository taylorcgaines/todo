<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/master.css">
    <title>{{pageTitle}}</title>
  </head>
  <body>
    <form class="todoForm" action="/toDo" method="post">
      <input type="text" name="newTodo" value="" placeholder="Todo, pls">
      <input type="submit" name="submit" value="Sumbit!">
    </form>



      <ul>
        {{#notdone}}
        <li>
          <form class="todoList" action="/toDone" method="post">
          <button type="submit" name="newToDone" value={{id}}>Donezo</button>{{task}}
          </form>
        </li>
        {{/notdone}}
      </ul>

      <h1>ToDone</h1>
      <ul>
        {{#done}}
        <li>{{task}}</li>
        {{/done}}
      </ul>

  </body>
</html>
